/* pages/movie/movie.wxss */
@import "../template/template.wxss";
page{
  background-color: #eeeeee;
}
.movie-banner{
  width: 100%;
  height: 400rpx;
}
.movie-banner image{
  width: 100%;
}
.movie-container{
  margin-top: 30rpx;
  background-color: #ffffff;
}
.movie-container-title{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.container-title{
  font-size: 36rpx;
}
.more{
  font-size: 28rpx;
  color: #b2b2b2;
}
.movie-list{
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.movie-search-container{
  padding: 20rpx 30rpx 0rpx;

}
.movie-search-container input{
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 50rpx;
  font-size: 28rpx;
}
.search-empty{
  padding-top: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #b2b2b2;
}