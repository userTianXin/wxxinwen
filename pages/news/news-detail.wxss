/* pages/news/news-detail.wxss */

.detail-image {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  width: 100%;
  height: 400rpx;
  background-position: center;
}

.author-info {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.author {
  padding-left: 20rpx;
  padding-right: 10rpx;
  font-size: 36rpx;
  color: #2b2b2b;
}

.public-date {
  font-size: 28rpx;
  color: #8b8b8b;
}

.author-image {
  width: 60rpx;
  height: 60rpx;
}

.title {
  display: block;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  padding-bottom: 30rpx;
  font-size: 28rpx;
  color: #2b2b2b;
  border-bottom: 1px #eee solid;
}

.content {
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #2b2b2b;
}

.news-share {
  margin: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.6);
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: relative;
}

.news-share button {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  opacity: 0;
}

.news-share image {
  width: 45rpx;
  height: 45rpx;
}
